<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <% @restaurants.each do |restaurant| %>
        <div class="custom-control custom-checkbox custom-control-inline">
           <%= check_box_tag 'product[restaurant][]', restaurant.id, false, id: "restaurant_products_#{restaurant.id}", class: 'custom-control-input' %>
           <%= label_tag "restaurant_products_#{restaurant.id}", restaurant.name, class: 'custom-control-label' %>
        </div>
    <% end %>
</div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
