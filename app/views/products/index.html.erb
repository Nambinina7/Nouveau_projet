      <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-0">
        <!-- Recently Favorited -->
        <div class="widget dashboard-container my-adslist">
          <h3 class="widget-header">Listes des produits</h3>
          <table class="table table-responsive product-dashboard-table">
            <thead>
              <tr>
                <th>Image</th>
                <th>Nom du Produit</th>
                <th class="text-center">Description</th>
                <th class="text-center">Action</th>
              </tr>
            </thead>
            <tbody>
              <% @products.each do |product| %>
              <tr>

                <td class="product-thumb">
                  <img width="80px" height="auto" src="<%= image_url('products/products-1.jpg')%>" alt="image description"></td>
                <td class="product-details">
                  <h3 class="title"><%= product.name %></h3>
                </td>
                <td class="product-category"><span class="categories"><%= product.description %></span></td>
                <td class="action" data-title="Action">
                  <div class="">
                    <ul class="list-inline justify-content-center">
                      <li class="list-inline-item">
                        <%= link_to '', product, class: 'fa fa-eye' %>
                      </li>
                      <li class="list-inline-item">
                          <%= link_to '', edit_product_path(product),class: 'fa fa-pencil' %>
                        </a>
                      </li>
                      <li class="list-inline-item">
                        <%= link_to '', product, method: :delete, data: { confirm: 'Are you sure?' },class: 'fa fa-trash' %>
                      </li>
                    </ul>
                  </div>
                </td>
              </tr>
              <tr>
                <% end %>
            </tbody>
          </table>

        </div>
      </div>
